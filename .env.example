# Cereberus Configuration
# Copy this to .env and fill in values

# REQUIRED - Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=changeme_generate_a_real_secret_key

# App
DEBUG=false
HOST=127.0.0.1
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./cereberus.db

# Cookie — set to true when running behind TLS/HTTPS
COOKIE_SECURE=false

# CORS — comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging
LOG_DIR=logs
LOG_MAX_BYTES=10000000
LOG_BACKUP_COUNT=5

# VPN Settings
VPN_KILL_SWITCH_MODE=alert_only
VPN_LEAK_CHECK_INTERVAL=60
VPN_TRUSTED_INTERFACES=[]
VPN_TRUSTED_DNS=[]

# Modules (true/false)
MODULE_NETWORK_SENTINEL=true
MODULE_BRUTE_FORCE_SHIELD=true
MODULE_EMAIL_ANALYZER=true
MODULE_FILE_INTEGRITY=true
MODULE_PROCESS_ANALYZER=true
MODULE_VULN_SCANNER=true
MODULE_THREAT_INTELLIGENCE=true
MODULE_RESOURCE_MONITOR=true
MODULE_PERSISTENCE_SCANNER=true
MODULE_EVENT_LOG_MONITOR=true
MODULE_RANSOMWARE_DETECTOR=true
MODULE_COMMANDER_BOND=true
MODULE_AGENT_SMITH=true
MODULE_MEMORY_SCANNER=true

# Alerting
ALERT_DESKTOP_NOTIFICATIONS=true
ALERT_WEBHOOK_URL=

# Threat Intelligence API Keys (optional)
VIRUSTOTAL_API_KEY=
ABUSEIPDB_API_KEY=

# YARA
YARA_RULES_DIR=yara_rules
YARA_SCAN_TIMEOUT=120
YARA_MAX_FILE_SIZE=100000000

# Memory Scanner
MEMORY_SCAN_INTERVAL=300
MEMORY_SCAN_MAX_PROCESSES=200
MEMORY_RWX_ALERT_THRESHOLD=3

# Event Bus / EvtSubscribe
EVENT_LOG_USE_EVT_SUBSCRIBE=true
EVENT_BUS_QUEUE_SIZE=10000

# Sword Protocol
SWORD_PROTOCOL_ENABLED=true
SWORD_MAX_RATE=20
SWORD_RATE_WINDOW=300

# Overwatch Protocol
OVERWATCH_CHECK_INTERVAL=600
OVERWATCH_BACKUP_ON_TAMPER=true
